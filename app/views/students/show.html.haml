%h2 Details about #{@student.name}

=simple_form_for @student, :html => {:class => "form-horizontal"} do |f|
  =f.input :custom_hours, :collection => (1..9), :required => true, :prompt => "New weekly requirement"
  =f.button :submit, "Set Required Hours", :class => "btn btn-primary"

=simple_form_for @student, :html => {:class => "form-horizontal"} do |f|
  =f.button :submit, "Clear Custom Hours", :class => "btn btn-primary"

%table.table#students_data
  %thead
    %tr
      %th Time in
      %th Time out
      %th Tutor
      %th Hours
  %tbody
    - @sessions.each do |session|
      %tr.student_data
        %td= session.start_time
        %td= session.stop_time
        %td= session.tutor.name
        %td= session.hours
